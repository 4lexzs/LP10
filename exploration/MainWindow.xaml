<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Aufgaben-Manager" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Eingabebereich für neue Aufgaben -->
        <StackPanel Grid.Row="0" Margin="10" Background="LightGray">
            <TextBlock Text="Neue Aufgabe" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="TitleTextBox" Grid.Row="0" Grid.Column="0" 
                         Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,5" 
                         Padding="5"
                         FontSize="14"
                         ToolTip="Titel der Aufgabe..."/>

                <TextBox x:Name="DescriptionTextBox" Grid.Row="1" Grid.Column="0" 
                         Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,0" 
                         Padding="5"
                         FontSize="14"
                         ToolTip="Beschreibung (optional)..."/>

                <Button x:Name="AddButton" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
                        Content="Hinzufügen" 
                        Padding="15,5" 
                        FontSize="14"
                        FontWeight="Bold"
                        Background="DodgerBlue"
                        Foreground="White"
                        Click="AddButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- Liste der Aufgaben -->
        <ListView x:Name="TasksListView" Grid.Row="1" Margin="10" 
                  ItemsSource="{Binding Tasks}"
                  Background="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="LightBlue" Margin="0,2" Padding="10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" 
                                      IsChecked="{Binding IsCompleted}" 
                                      Margin="0,0,10,0" 
                                      VerticalAlignment="Center"
                                      Tag="{Binding}"
                                      Checked="CheckBox_Checked"
                                      Unchecked="CheckBox_Unchecked"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Title}" 
                                           FontWeight="Bold" 
                                           FontSize="16"
                                           Foreground="Black"/>
                                <TextBlock Text="{Binding Description}" 
                                           TextWrapping="Wrap" 
                                           FontSize="14"
                                           Foreground="DarkGray"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat='Erstellt: {0:dd.MM.yyyy HH:mm}'}" 
                                           FontSize="12"
                                           Foreground="Gray"/>
                            </StackPanel>

                            <Button Grid.Column="2" 
                                    Content="Löschen" 
                                    Margin="10,0,0,0"
                                    Padding="10,5"
                                    Background="Red"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Tag="{Binding}"
                                    Click="DeleteButton_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
